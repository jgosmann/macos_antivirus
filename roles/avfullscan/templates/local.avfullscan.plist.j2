<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
    <dict>
        <key>Label</key>
        <string>local.avfullscan</string>
        <key>Program</key>
        <string>{{ python3_path }}</string>
        <key>ProgramArguments</key>
        <array>
            <string>{{ python3_path }}</string>
            <string>{{ avfullscan_path }}</string>
            <string>--avscan-path</string>
            <string>{{ avscan_path }}</string>
            <string>--timestamp-file</string>
            <string>{{ avfullscan_timestamp_file_path }}</string>
            <string>--if-last-scan-age</string>
            <string>{{ avfullscan_interval_secs }}</string>
            <string>--modified-last-days</string>
            <string>{{ avfullscan_scan_days }}</string>
{% if avfullscan_require_ac %}
            <string>--require-ac</string>
{% endif %}
{% for dir in avfullscan_dirs %}
            <string>{{ dir }}</string>
{% endfor %}
        </array>
        <key>RunAtLoad</key> <true/>
        <key>StartInterval</key> <integer>{{ avfullscan_check_interval_secs }}</integer>
        <key>ProcessType</key> <string>Background</string>
        <key>Nice</key> <integer>10</integer>
        <key>LowPriorityIO</key> <true/>
        <key>LowPriorityBackgroundIO</key> <true/>
    </dict>
</plist>
